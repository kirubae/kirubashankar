---
import { SITE } from '@data/site';

interface Props {
  showNav?: boolean;
}

const { showNav = true } = Astro.props;
const currentPath = Astro.url.pathname;
---

<header class="border-b border-border">
  <div class="max-w-3xl mx-auto px-5 py-4">
    <nav class="flex items-center justify-between" aria-label="Main navigation">
      <a href="/" class="flex items-center gap-2 text-lg font-semibold text-ink hover:text-terracotta transition-colors">
        <svg class="h-5 w-5" viewBox="145 95 210 315" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <circle cx="193" cy="141" r="38.5"/>
          <path d="M307,182c-22.6,0-41-18.4-41-41s18.4-41,41-41s41,18.4,41,41S329.6,182,307,182z M307,105c-19.9,0-36,16.1-36,36 s16.1,36,36,36s36-16.1,36-36S326.9,105,307,105z"/>
          <path d="M193,291c-22.6,0-41-18.4-41-41s18.4-41,41-41s41,18.4,41,41S215.6,291,193,291z M193,214c-19.9,0-36,16.1-36,36 s16.1,36,36,36s36-16.1,36-36S212.9,214,193,214z"/>
          <path d="M307,291c-22.6,0-41-18.4-41-41s18.4-41,41-41s41,18.4,41,41S329.6,291,307,291z M307,214c-19.9,0-36,16.1-36,36 s16.1,36,36,36s36-16.1,36-36S326.9,214,307,214z"/>
          <circle cx="193" cy="359" r="38.5"/>
          <path d="M307,400c-22.6,0-41-18.4-41-41s18.4-41,41-41s41,18.4,41,41S329.6,400,307,400z M307,323c-19.9,0-36,16.1-36,36 s16.1,36,36,36s36-16.1,36-36S326.9,323,307,323z"/>
        </svg>
        {SITE.name.split(' ')[0]}
      </a>
      {showNav && (
        <ul class="flex items-center gap-6 text-sm">
          <li>
            <a
              href="/"
              class:list={[
                'transition-colors',
                currentPath === '/' ? 'text-terracotta font-medium' : 'text-ink-light hover:text-terracotta',
              ]}
            >
              About
            </a>
          </li>
          <li>
            <a
              href="/tools"
              class:list={[
                'transition-colors',
                currentPath.startsWith('/tools') ? 'text-terracotta font-medium' : 'text-ink-light hover:text-terracotta',
              ]}
            >
              My Tools
            </a>
          </li>
        </ul>
      )}
    </nav>
  </div>
</header>
