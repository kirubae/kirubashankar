---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist."
  noindex={true}
>
  <div class="max-w-2xl mx-auto my-8 md:my-12 bg-paper border border-border rounded px-6 md:px-10 py-16 text-center">
    <h1 class="text-6xl font-bold text-border mb-4">404</h1>
    <h2 class="text-2xl font-bold text-ink mb-4">Page Not Found</h2>
    <p class="text-ink-light mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="inline-flex items-center px-6 py-3 bg-terracotta text-white rounded font-medium hover:bg-terracotta-dark transition-colors"
    >
      Go Home
    </a>
  </div>
</BaseLayout>
