---
import BaseLayout from '@layouts/BaseLayout.astro';
import { generateBreadcrumbSchema } from '@components/seo/schemas/BreadcrumbSchema';
import { generateWebApplicationSchema } from '@components/seo/schemas/WebApplicationSchema';
import Breadcrumb from '@components/ui/Breadcrumb.astro';
import Icon from '@components/ui/Icon.astro';
import '@styles/tools.css';

export const prerender = false;

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'My Tools', url: '/tools' },
  { name: 'Research Companies', url: '/tools/deep-search' },
];

const jsonLdSchema = [
  generateBreadcrumbSchema(breadcrumbs),
  generateWebApplicationSchema({
    name: 'Research Companies',
    description: 'AI-powered research tool. Upload a list of companies and get detailed research using Perplexity AI.',
    slug: 'deep-search',
    category: 'BusinessApplication',
    featureList: ['AI-powered company research', 'Bulk research from CSV', 'Custom research fields', 'Export to CSV'],
  }),
];

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || '';
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY || '';
---

<BaseLayout
  title="Research Companies - AI-Powered Company Research"
  description="Research companies at scale using AI. Upload a CSV of company names, define custom research fields, and get detailed insights powered by Perplexity AI."
  jsonLd={jsonLdSchema}
>
  <!-- API Key Modal (for free users) -->
  <div class="auth-modal hidden" id="auth-modal">
    <div class="auth-modal-content">
      <h2>Enter API Key</h2>
      <p class="auth-subtitle">Free tier users need to provide their own Perplexity API key</p>

      <div class="auth-api-form" id="auth-api-form">
        <input type="text" id="auth-api-input" placeholder="Enter your Perplexity API key (pplx-...)" />
        <p class="auth-hint">Get your API key from <a href="https://www.perplexity.ai/settings/api" target="_blank">perplexity.ai/settings/api</a></p>
        <div class="auth-password-actions">
          <button class="btn btn-primary" id="auth-api-submit">Continue</button>
        </div>
        <p class="auth-error" id="auth-api-error" style="display: none;">Invalid API key format</p>
      </div>
    </div>
  </div>

  <div class="tool-container" id="tool-container">
    <Breadcrumb items={breadcrumbs} />

    <!-- Landing page for unauthenticated users -->
    <div id="tool-landing" class="tool-landing" style="display: none;">
      <div class="landing-hero">
        <h1>Research Companies</h1>
        <p>AI-powered company research using Perplexity</p>
      </div>

      <div class="feature-list">
        <h2>What you can do</h2>
        <ul>
          <li>AI-powered company research using Perplexity</li>
          <li>Bulk research from CSV uploads</li>
          <li>Define custom research fields</li>
          <li>Export results to CSV</li>
          <li>Pro tier: Uses built-in API (no key needed)</li>
        </ul>
        <a href="/login?redirect=/tools/deep-search" class="btn btn-primary landing-cta">Continue</a>
      </div>
    </div>

    <!-- Page Heading (shown when authenticated) -->
    <header class="page-header" id="page-header" style="display: none;">
      <h1>Research Companies</h1>
      <p class="page-subtitle">AI-powered company research using Perplexity</p>
    </header>

    <!-- Loading state while checking auth - skeleton UI -->
    <div class="auth-loading" id="auth-loading">
      <div class="skeleton-container">
        <div class="skeleton-header"></div>
        <div class="skeleton-upload-area"></div>
        <div class="skeleton-button"></div>
      </div>
    </div>

    <!-- Main content (hidden until authenticated) -->
    <div id="research-content" style="display: none;">

      <!-- Step 1: Upload -->
      <section id="step-upload" class="step active">
        <div class="step-header">
          <div class="step-badge">1</div>
          <div>
            <h2>Upload Companies</h2>
            <p class="step-subtitle">Upload a CSV file with company data</p>
          </div>
        </div>

        <div class="step-content">
          <!-- Upload Area -->
          <div class="upload-area" id="upload-area">
            <div class="upload-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="17 8 12 3 7 8"></polyline>
                <line x1="12" y1="3" x2="12" y2="15"></line>
              </svg>
            </div>
            <h2>Upload your CSV</h2>
            <p>Drop your file here or click to browse</p>
            <button class="btn btn-primary" id="upload-btn">Choose File</button>
            <input type="file" id="file-input" accept=".csv" />
          </div>

          <!-- File Info -->
          <div id="file-info" class="info-card" style="display: none;">
            <p><strong>File:</strong> <span id="file-name"></span></p>
            <p><strong>Rows:</strong> <span id="file-rows">0</span></p>
          </div>

          <!-- Header Selection -->
          <div id="header-section" class="form-section" style="display: none;">
            <label class="form-label">Does your CSV have a header row?</label>
            <div class="radio-group">
              <label class="radio-card">
                <input type="radio" name="has_header" value="yes" checked />
                <span class="radio-content">
                  <span class="radio-icon">&#10003;</span>
                  Yes, first row is headers
                </span>
              </label>
              <label class="radio-card">
                <input type="radio" name="has_header" value="no" />
                <span class="radio-content">
                  <span class="radio-icon">&#10007;</span>
                  No headers
                </span>
              </label>
            </div>
          </div>

          <div id="continue-section" style="display: none;">
            <button id="btn-continue" class="btn btn-primary btn-large">
              Continue
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
          </div>
        </div>
      </section>

      <!-- Step 2: Select Column -->
      <section id="step-column" class="step" style="display: none;">
        <div class="step-header">
          <div class="step-badge">2</div>
          <div>
            <h2>Select Company Column</h2>
            <p class="step-subtitle">Which column contains the company names?</p>
          </div>
        </div>

        <div class="step-content">
          <div class="column-preview-wrapper">
            <table id="column-preview-table" class="column-preview-table">
              <thead id="column-preview-header"></thead>
              <tbody id="column-preview-body"></tbody>
            </table>
          </div>

          <div class="action-bar">
            <button id="btn-back-column" class="btn btn-secondary">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
              Back
            </button>
            <button id="btn-continue-column" class="btn btn-primary btn-large" disabled>
              Continue
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
          </div>
        </div>
      </section>

      <!-- Step 3: Define Fields -->
      <section id="step-fields" class="step" style="display: none;">
        <div class="step-header">
          <div class="step-badge">3</div>
          <div>
            <h2>Define Research Fields</h2>
            <p class="step-subtitle">What information do you want to research?</p>
          </div>
        </div>

        <div class="step-content">
          <div id="fields-list" class="fields-container"></div>

          <button id="btn-add-field" class="btn btn-secondary btn-add">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Add Field
          </button>

          <div class="action-bar">
            <button id="btn-back-fields" class="btn btn-secondary">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
              Back
            </button>
            <button id="btn-run-research" class="btn btn-primary btn-large" disabled>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                <polygon points="5 3 19 12 5 21 5 3"></polygon>
              </svg>
              Run Research
            </button>
          </div>
        </div>
      </section>

      <!-- Step 4: Results -->
      <section id="step-results" class="step" style="display: none;">
        <div class="step-header">
          <div class="step-badge">4</div>
          <div>
            <h2>Research Results</h2>
            <p class="step-subtitle" id="results-status">Processing...</p>
          </div>
        </div>

        <div class="step-content">
          <div id="progress-section">
            <div class="progress-bar">
              <div class="progress-fill" id="progress-fill"></div>
            </div>
            <p id="progress-text" class="progress-text">Starting research...</p>
          </div>

          <div class="results-table-wrapper">
            <table id="results-table">
              <thead id="results-header"></thead>
              <tbody id="results-body"></tbody>
            </table>
          </div>

          <div class="action-bar">
            <button id="btn-download" class="btn btn-primary" style="display: none;">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="7 10 12 15 17 10"></polyline>
                <line x1="12" y1="15" x2="12" y2="3"></line>
              </svg>
              Download CSV
            </button>
            <button id="btn-new-research" class="btn btn-secondary" style="display: none;">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                <polyline points="1 4 1 10 7 10"></polyline>
                <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path>
              </svg>
              New Research
            </button>
          </div>
        </div>
      </section>

    </div>
  </div>
</BaseLayout>

<style is:global>
  /* Auth Modal Styles */
  .auth-modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    padding: 20px;
  }

  .auth-modal.hidden {
    display: none;
  }

  .auth-modal-content {
    background: var(--color-paper);
    border-radius: 16px;
    padding: 32px;
    max-width: 420px;
    width: 100%;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .auth-modal-content h2 {
    margin: 0 0 8px;
    font-size: 24px;
    color: var(--color-ink);
    text-align: center;
  }

  .auth-subtitle {
    color: var(--color-ink-light);
    text-align: center;
    margin-bottom: 24px;
  }

  .auth-modal .auth-options {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .auth-modal .auth-option {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    border: 2px solid var(--color-border);
    border-radius: 12px;
    background: var(--color-paper);
    cursor: pointer;
    transition: all 0.2s;
    text-align: left;
    width: 100%;
  }

  .auth-modal .auth-option:hover {
    border-color: var(--color-terracotta);
    background: var(--color-cream);
  }

  .auth-option-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .auth-option-icon.guest {
    background: #e0f2fe;
    color: #0284c7;
  }

  .auth-option-icon.pro {
    background: #fef3c7;
    color: #d97706;
  }

  .auth-option-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .auth-option-title {
    font-weight: 600;
    color: var(--color-ink);
    font-size: 16px;
  }

  .auth-option-desc {
    font-size: 13px;
    color: var(--color-ink-light);
  }

  .auth-password-form,
  .auth-api-form {
    margin-top: 8px;
  }

  .auth-password-form input,
  .auth-api-form input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    font-size: 16px;
    margin-bottom: 12px;
  }

  .auth-password-form input:focus,
  .auth-api-form input:focus {
    outline: none;
    border-color: var(--color-terracotta);
  }

  .auth-password-actions {
    display: flex;
    gap: 12px;
  }

  .auth-password-actions .btn {
    flex: 1;
  }

  .auth-error {
    color: #ef4444;
    font-size: 14px;
    margin-top: 12px;
    text-align: center;
  }

  .auth-hint {
    font-size: 13px;
    color: var(--color-ink-light);
    margin-bottom: 12px;
  }

  .auth-hint a {
    color: var(--color-terracotta);
  }

  /* File input */
  #file-input {
    display: none;
  }

  .btn-add {
    width: 100%;
    justify-content: center;
    margin-top: 16px;
  }

  /* Column Preview Table */
  .column-preview-wrapper {
    overflow-x: auto;
    margin-bottom: 24px;
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .column-preview-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 13px;
  }

  .column-preview-table th,
  .column-preview-table td {
    padding: 12px 16px;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
    white-space: nowrap;
  }

  .column-preview-table th {
    background: var(--color-cream);
    font-weight: 600;
  }

  .column-preview-table th label {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
  }

  .column-preview-table th input[type="radio"] {
    accent-color: var(--color-terracotta);
  }

  .column-preview-table tr:last-child td {
    border-bottom: none;
  }

  .column-selected {
    background: #f0fdf4 !important;
  }

  .column-selected th {
    background: #dcfce7 !important;
  }

  /* Field Cards */
  .fields-container {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .field-card {
    background: var(--color-paper);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 24px;
    position: relative;
  }

  .btn-remove {
    position: absolute;
    top: 12px;
    right: 12px;
    padding: 6px;
    background: var(--color-cream);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    color: var(--color-ink-light);
    transition: all 0.2s;
  }

  .btn-remove:hover {
    background: #fef2f2;
    color: #ef4444;
  }

  .field-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 20px;
  }

  .field-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .field-label {
    font-size: 13px;
    font-weight: 500;
    color: var(--color-ink);
  }

  .field-card input,
  .field-card select {
    padding: 10px 12px;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    font-size: 14px;
    font-family: inherit;
    background: var(--color-paper);
    width: 100%;
  }

  .field-card input:focus,
  .field-card select:focus {
    outline: none;
    border-color: var(--color-terracotta);
  }

  .enum-options {
    display: none;
    margin-top: 16px;
    padding: 16px;
    background: var(--color-cream);
    border: 1px solid var(--color-border);
    border-radius: 6px;
  }

  .enum-options.visible {
    display: block;
  }

  .enum-hint {
    font-size: 12px;
    color: var(--color-ink-light);
    margin-top: 8px;
  }

  @media (max-width: 600px) {
    .field-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Results Table */
  #results-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 13px;
  }

  #results-table th,
  #results-table td {
    padding: 12px 16px;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  #results-table th {
    background: var(--color-cream);
    font-weight: 600;
    position: sticky;
    top: 0;
  }

  #results-table th.new-field {
    background: #dcfce7;
  }

  #results-table td.new-field {
    background: #f0fdf4;
  }

  #results-table tr:hover td {
    background: var(--color-cream);
  }

  #results-table tr:hover td.new-field {
    background: #dcfce7;
  }

  .auth-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 32px 0;
  }

  .skeleton-container {
    width: 100%;
    max-width: 800px;
  }

  .skeleton-header {
    height: 24px;
    width: 200px;
    background: linear-gradient(90deg, #e5e5e5 25%, #f0f0f0 50%, #e5e5e5 75%);
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
    border-radius: 4px;
    margin-bottom: 24px;
  }

  .skeleton-upload-area {
    height: 120px;
    background: linear-gradient(90deg, #e5e5e5 25%, #f0f0f0 50%, #e5e5e5 75%);
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
    border-radius: 8px;
    margin-bottom: 16px;
  }

  .skeleton-button {
    height: 44px;
    width: 140px;
    background: linear-gradient(90deg, #e5e5e5 25%, #f0f0f0 50%, #e5e5e5 75%);
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
    border-radius: 6px;
  }

</style>

<script is:inline src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/dist/umd/supabase.min.js"></script>
<script is:inline define:vars={{ supabaseUrl, supabaseKey }}>
  // Initialize Supabase client
  const supabase = window.supabase.createClient(supabaseUrl, supabaseKey);

  // State
  let csvData = [];
  let csvHeaders = [];
  let hasHeader = true;
  let selectedColumnIndex = -1;
  let fields = [];
  let results = [];
  let isRunning = false;
  let accessMode = null; // 'guest' (free tier) or 'maker' (pro tier)
  let customApiKey = null;
  let currentUser = null;
  let currentTier = 'free';

  // Security: Escape HTML to prevent XSS
  function escapeHtml(text) {
    if (!text) return '';
    const div = document.createElement('div');
    div.textContent = String(text);
    return div.innerHTML;
  }

  // Field data types
  const fieldTypes = {
    'String': { label: 'Text', description: 'Free text response' },
    'Numeric': { label: 'Number', description: 'Numeric value' },
    'Boolean': { label: 'Yes/No', description: 'True or false value' },
    'Enum': { label: 'Options', description: 'One of a set of values' },
  };

  // DOM Elements
  const elements = {
    authLoading: document.getElementById('auth-loading'),
    authModal: document.getElementById('auth-modal'),
    authApiInput: document.getElementById('auth-api-input'),
    authApiSubmit: document.getElementById('auth-api-submit'),
    authApiError: document.getElementById('auth-api-error'),
    toolContainer: document.getElementById('tool-container'),
    toolLanding: document.getElementById('tool-landing'),
    pageHeader: document.getElementById('page-header'),
    researchContent: document.getElementById('research-content'),
    uploadArea: document.getElementById('upload-area'),
    fileInput: document.getElementById('file-input'),
    uploadBtn: document.getElementById('upload-btn'),
    fileInfo: document.getElementById('file-info'),
    fileName: document.getElementById('file-name'),
    fileRows: document.getElementById('file-rows'),
    headerSection: document.getElementById('header-section'),
    continueSection: document.getElementById('continue-section'),
    btnContinue: document.getElementById('btn-continue'),
    stepUpload: document.getElementById('step-upload'),
    stepColumn: document.getElementById('step-column'),
    stepFields: document.getElementById('step-fields'),
    stepResults: document.getElementById('step-results'),
    columnPreviewHeader: document.getElementById('column-preview-header'),
    columnPreviewBody: document.getElementById('column-preview-body'),
    btnBackColumn: document.getElementById('btn-back-column'),
    btnContinueColumn: document.getElementById('btn-continue-column'),
    fieldsList: document.getElementById('fields-list'),
    btnAddField: document.getElementById('btn-add-field'),
    btnBackFields: document.getElementById('btn-back-fields'),
    btnRunResearch: document.getElementById('btn-run-research'),
    btnDownload: document.getElementById('btn-download'),
    btnNewResearch: document.getElementById('btn-new-research'),
    progressFill: document.getElementById('progress-fill'),
    progressText: document.getElementById('progress-text'),
    resultsStatus: document.getElementById('results-status'),
    resultsHeader: document.getElementById('results-header'),
    resultsBody: document.getElementById('results-body'),
  };

  // Initialize - check auth and set up event listeners
  document.addEventListener('DOMContentLoaded', () => {
    initializeAuth();
    setupEventListeners();
  });

  function showLandingPage() {
    elements.authLoading.style.display = 'none';
    elements.toolLanding.style.display = 'block';
  }

  // Check user tier and set access mode on page load
  async function initializeAuth(retryCount = 0) {
    try {
      // Check localStorage cache first for instant load
      const cached = localStorage.getItem('userTier');
      if (cached) {
        try {
          const cacheData = JSON.parse(cached);
          // Cache valid for 5 minutes
          if (Date.now() - cacheData.timestamp < 5 * 60 * 1000) {
            const tier = cacheData.tier;
            currentTier = tier;

            // Hide loading, show page header and content immediately
            elements.authLoading.style.display = 'none';
            elements.pageHeader.style.display = 'block';
            elements.toolContainer.style.display = 'block';

            // Map tier to mode: pro/enterprise = maker (built-in API), free = guest (own API key)
            if (tier === 'pro' || tier === 'enterprise') {
              accessMode = 'maker';
              customApiKey = null;
              elements.researchContent.style.display = 'block';
              showStep('upload');
              addField();
            } else {
              accessMode = 'guest';
              elements.authModal.classList.remove('hidden');
            }
            // Verify session in background (non-blocking)
            verifySessionInBackground();
            return;
          }
        } catch (e) {}
      }

      const { data: { session } } = await supabase.auth.getSession();

      if (!session) {
        // On mobile, session might not be ready yet - retry once after delay
        if (retryCount < 1) {
          console.log('No session found, retrying in 250ms...');
          await new Promise(resolve => setTimeout(resolve, 250));
          return initializeAuth(retryCount + 1);
        }
        // No session after retries - show landing page
        showLandingPage();
        return;
      }

      // Hide loading, show page header and content
      elements.authLoading.style.display = 'none';
      elements.pageHeader.style.display = 'block';
      elements.toolContainer.style.display = 'block';

      currentUser = session.user;

      // Fetch user's tier from profiles table
      const { data: profile } = await supabase
        .from('profiles')
        .select('tier')
        .eq('id', session.user.id)
        .single();

      const tier = profile?.tier || 'free';
      currentTier = tier;

      // Cache the tier for future visits
      localStorage.setItem('userTier', JSON.stringify({
        tier: tier,
        userId: session.user.id,
        timestamp: Date.now()
      }));

      // Map tier to mode: pro/enterprise = maker (built-in API), free = guest (own API key)
      if (tier === 'pro' || tier === 'enterprise') {
        // Pro user - direct access with built-in API
        accessMode = 'maker';
        customApiKey = null;
        elements.researchContent.style.display = 'block';
        showStep('upload');
        addField();
      } else {
        // Free user - show API key form
        accessMode = 'guest';
        elements.authModal.classList.remove('hidden');
      }
    } catch (error) {
      console.error('Auth error:', error);
      // On error, show landing page
      showLandingPage();
    }
  }

  // Background session verification (doesn't block UI)
  async function verifySessionInBackground() {
    try {
      const { data: { session } } = await supabase.auth.getSession();
      if (!session) {
        // Session expired - clear cache and redirect
        localStorage.removeItem('userTier');
        window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
        return;
      }
      currentUser = session.user;
    } catch (error) {
      console.error('Background auth check error:', error);
    }
  }

  function setupEventListeners() {
    // Auth - API key form for free users
    elements.authApiSubmit.addEventListener('click', handleApiKeySubmit);
    elements.authApiInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') handleApiKeySubmit();
    });

    // Upload
    elements.uploadArea.addEventListener('click', () => elements.fileInput.click());
    elements.uploadBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      elements.fileInput.click();
    });
    elements.fileInput.addEventListener('change', handleFileSelect);

    // Drag and drop
    elements.uploadArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      elements.uploadArea.classList.add('dragover');
