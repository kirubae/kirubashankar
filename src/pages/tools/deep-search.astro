    elements.btnNewResearch.addEventListener('click', () => location.reload());
  }

  // API key submit handler (for free tier users)
  function handleApiKeySubmit() {
    const apiKey = elements.authApiInput.value.trim();

    if (apiKey.startsWith('pplx-')) {
      customApiKey = apiKey;
      elements.authModal.classList.add('hidden');
      elements.researchContent.style.display = 'block';
      showStep('upload');
      addField(); // Add first field
    } else {
      elements.authApiError.textContent = 'Invalid API key format (should start with pplx-)';
      elements.authApiError.style.display = 'block';
    }
  }

  function handleFileSelect(e) {
    const file = e.target.files[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = (event) => {
      const text = event.target.result;
      csvData = parseCSV(text);

      elements.fileName.textContent = file.name;
      elements.fileRows.textContent = csvData.length;
      elements.fileInfo.style.display = 'block';
      elements.headerSection.style.display = 'block';
      elements.continueSection.style.display = 'block';
    };
    reader.readAsText(file);
  }

  function parseCSV(text) {
    const rows = [];
    let currentRow = [];
    let currentField = '';
    let inQuotes = false;

    for (let i = 0; i < text.length; i++) {
      const char = text[i];
      const nextChar = text[i + 1];

      if (inQuotes) {
        if (char === '"' && nextChar === '"') {
          currentField += '"';
          i++;
        } else if (char === '"') {
          inQuotes = false;
        } else {
          currentField += char;
        }
      } else {
        if (char === '"') {
          inQuotes = true;
        } else if (char === ',') {
          currentRow.push(currentField.trim());
          currentField = '';
        } else if (char === '\n' || (char === '\r' && nextChar === '\n')) {
          currentRow.push(currentField.trim());
          if (currentRow.some((f) => f !== '')) {
            rows.push(currentRow);
          }
          currentRow = [];
          currentField = '';
          if (char === '\r') i++;
        } else {
          currentField += char;
        }
      }
    }

    if (currentField || currentRow.length > 0) {
      currentRow.push(currentField.trim());
      if (currentRow.some((f) => f !== '')) {
        rows.push(currentRow);
      }
    }

    return rows;
  }

  function goToColumnStep() {
    hasHeader = document.querySelector('input[name="has_header"]:checked').value === 'yes';

    if (hasHeader && csvData.length > 0) {
      csvHeaders = csvData[0];
      csvData = csvData.slice(1);
    } else {
      // Generate column names
      const colCount = csvData[0]?.length || 0;
      csvHeaders = Array.from({ length: colCount }, (_, i) => `Column ${i + 1}`);
    }

    elements.fileRows.textContent = csvData.length;
    renderColumnPreview();
    showStep('column');
  }

  function renderColumnPreview() {
    const colCount = csvHeaders.length;

    // Render header row with radio buttons
    let headerHtml = '<tr>';
    for (let i = 0; i < colCount; i++) {
      headerHtml += `
        <th>
          <label>
            <input type="radio" name="company_column" value="${i}" />
            ${escapeHtml(csvHeaders[i])}
          </label>
        </th>
      `;
    }
    headerHtml += '</tr>';
    elements.columnPreviewHeader.innerHTML = headerHtml;

    // Render up to 5 data rows
    let bodyHtml = '';
    const previewRows = csvData.slice(0, 5);
    previewRows.forEach((row) => {
      bodyHtml += '<tr>';
      for (let i = 0; i < colCount; i++) {
        bodyHtml += `<td>${escapeHtml(row[i] || '')}</td>`;
      }
      bodyHtml += '</tr>';
    });
    elements.columnPreviewBody.innerHTML = bodyHtml;

    // Add event listeners for column selection
    const radios = elements.columnPreviewHeader.querySelectorAll('input[type="radio"]');
    radios.forEach((radio) => {
      radio.addEventListener('change', (e) => {
        selectedColumnIndex = parseInt(e.target.value);
        elements.btnContinueColumn.disabled = false;
        highlightSelectedColumn();
      });
    });
  }

  function highlightSelectedColumn() {
    const table = document.getElementById('column-preview-table');
    const rows = table.querySelectorAll('tr');

    rows.forEach((row) => {
      const cells = row.querySelectorAll('th, td');
      cells.forEach((cell, idx) => {
        cell.classList.toggle('column-selected', idx === selectedColumnIndex);
      });
    });
  }

  function showStep(step) {
    elements.stepUpload.style.display = step === 'upload' ? 'block' : 'none';
    elements.stepColumn.style.display = step === 'column' ? 'block' : 'none';
    elements.stepFields.style.display = step === 'fields' ? 'block' : 'none';
    elements.stepResults.style.display = step === 'results' ? 'block' : 'none';
  }

  function addField() {
    const id = Date.now();

    const fieldCard = document.createElement('div');
    fieldCard.className = 'field-card';
    fieldCard.id = `field-${id}`;

    const removeBtn = document.createElement('button');
    removeBtn.className = 'btn-remove';
    removeBtn.title = 'Remove field';
    removeBtn.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>';
    removeBtn.addEventListener('click', () => {
      fieldCard.remove();
      updateRunButton();
    });

    const grid = document.createElement('div');
    grid.className = 'field-grid';

    // Field Name
    const nameGroup = document.createElement('div');
    nameGroup.className = 'field-group';
    const nameLabel = document.createElement('label');
    nameLabel.className = 'field-label';
    nameLabel.textContent = 'Field Name';
    const nameInput = document.createElement('input');
    nameInput.type = 'text';
    nameInput.className = 'field-name';
    nameInput.placeholder = 'e.g., Industry';
    nameInput.addEventListener('input', updateRunButton);
    nameGroup.appendChild(nameLabel);
    nameGroup.appendChild(nameInput);

    // Field Type
    const typeGroup = document.createElement('div');
    typeGroup.className = 'field-group';
    const typeLabel = document.createElement('label');
    typeLabel.className = 'field-label';
    typeLabel.textContent = 'Field Type';
    const select = document.createElement('select');
    Object.entries(fieldTypes).forEach(([key, value]) => {
      const option = document.createElement('option');
      option.value = key;
      option.textContent = value.label;
      select.appendChild(option);
    });
    typeGroup.appendChild(typeLabel);
    typeGroup.appendChild(select);

    // Research Prompt
    const promptGroup = document.createElement('div');
    promptGroup.className = 'field-group';
    const promptLabel = document.createElement('label');
    promptLabel.className = 'field-label';
    promptLabel.textContent = 'Research Prompt';
    const promptInput = document.createElement('input');
    promptInput.type = 'text';
    promptInput.className = 'field-prompt';
    promptInput.placeholder = 'e.g., What industry does this company operate in?';
    promptInput.addEventListener('input', updateRunButton);
    promptGroup.appendChild(promptLabel);
    promptGroup.appendChild(promptInput);

    grid.appendChild(nameGroup);
    grid.appendChild(typeGroup);
    grid.appendChild(promptGroup);

    // Enum options section
    const enumSection = document.createElement('div');
    enumSection.className = 'enum-options';
    enumSection.id = `enum-options-${id}`;

    const enumGroup = document.createElement('div');
    enumGroup.className = 'field-group';
    const enumLabel = document.createElement('label');
    enumLabel.className = 'field-label';
    enumLabel.textContent = 'Allowed Options';
    const enumInput = document.createElement('input');
    enumInput.type = 'text';
    enumInput.id = `enum-values-${id}`;
    enumInput.placeholder = 'e.g., B2B, B2C, Both, Unknown';
    enumInput.addEventListener('input', updateRunButton);
    const enumHint = document.createElement('div');
    enumHint.className = 'enum-hint';
    enumHint.textContent = 'Comma-separated list of allowed values';
    enumGroup.appendChild(enumLabel);
    enumGroup.appendChild(enumInput);
    enumGroup.appendChild(enumHint);
    enumSection.appendChild(enumGroup);

    select.addEventListener('change', () => {
      enumSection.classList.toggle('visible', select.value === 'Enum');
      updateRunButton();
    });

    fieldCard.appendChild(removeBtn);
    fieldCard.appendChild(grid);
    fieldCard.appendChild(enumSection);
    elements.fieldsList.appendChild(fieldCard);

    updateRunButton();
  }

  function updateRunButton() {
    const fields = getFields();
    const hasValidFields = fields.length > 0 && fields.every(f => f.name && f.prompt);
    elements.btnRunResearch.disabled = !hasValidFields;
  }

  function getFields() {
    const fieldCards = elements.fieldsList.querySelectorAll('.field-card');
    const fields = [];
    fieldCards.forEach((card) => {
      const select = card.querySelector('select');
      const nameInput = card.querySelector('.field-name');
      const promptInput = card.querySelector('.field-prompt');
      const enumInput = card.querySelector('[id^="enum-values-"]');

      const name = nameInput?.value.trim() || '';
      const prompt = promptInput?.value.trim() || '';
      const type = select?.value || 'String';

      if (name && prompt) {
        const field = { type, name, prompt };
        if (type === 'Enum' && enumInput) {
          field.options = enumInput.value.split(',').map(v => v.trim()).filter(v => v);
        }
        fields.push(field);
      }
    });
    return fields;
  }

  async function runResearch() {
    fields = getFields();
    if (fields.length === 0) {
      alert('Please add at least one research field');
      return;
    }

    if (csvData.length === 0 || selectedColumnIndex < 0) {
      alert('No data or column selected');
      return;
    }

    showStep('results');
    isRunning = true;
    results = [];

    elements.btnDownload.style.display = 'none';
    elements.btnNewResearch.style.display = 'none';

    // Setup table headers: original columns + new research fields
    const headerRow = document.createElement('tr');
    csvHeaders.forEach((h) => {
      const th = document.createElement('th');
      th.textContent = h;
      headerRow.appendChild(th);
    });
    fields.forEach((f) => {
      const th = document.createElement('th');
      th.textContent = f.name;
      th.className = 'new-field';
      headerRow.appendChild(th);
    });
    elements.resultsHeader.innerHTML = '';
    elements.resultsHeader.appendChild(headerRow);
    elements.resultsBody.innerHTML = '';

    const companies = csvData.map((row) => row[selectedColumnIndex]).filter(c => c);

    try {
      elements.progressText.textContent = `Researching ${companies.length} companies...`;
      elements.progressFill.style.width = '10%';

      const response = await fetch('/api/research', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          companies: companies,
          fields: fields.map((f) => ({
            name: f.name,
            prompt: f.prompt,
            type: f.type,
            options: f.options || null,
          })),
          apiKey: customApiKey,
        }),
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Failed to run research');
      }

      const data = await response.json();
      const researchResults = data.results || [];

      // Merge research results with original data
      csvData.forEach((row, idx) => {
        const company = row[selectedColumnIndex];
        const research = researchResults.find(r => r.company === company) || {};

        const resultRow = {
          originalData: row,
          research: research,
        };
        results.push(resultRow);
        addResultRow(resultRow);
      });

      updateProgress(results.length, csvData.length);
      researchComplete();

    } catch (error) {
      console.error('Error running research:', error);
      elements.progressText.textContent = 'Error: ' + error.message;
      elements.btnNewResearch.style.display = 'inline-flex';
      isRunning = false;
    }
  }

  function updateProgress(completed, total) {
    const percent = Math.round((completed / total) * 100);
    elements.progressFill.style.width = `${percent}%`;
    elements.progressText.textContent = `Processing ${completed} of ${total} rows...`;
    elements.resultsStatus.textContent = `${completed}/${total} complete`;
  }

  function addResultRow(result) {
    const row = document.createElement('tr');

    // Original columns
    result.originalData.forEach((cell) => {
      const td = document.createElement('td');
      td.textContent = cell || '';
      row.appendChild(td);
    });

    // Research fields
    fields.forEach((f) => {
      const td = document.createElement('td');
      td.textContent = result.research[f.name] || '';
      td.className = 'new-field';
      row.appendChild(td);
    });

    elements.resultsBody.appendChild(row);
  }

  function researchComplete() {
    isRunning = false;
    elements.progressText.textContent = 'Research complete!';
    elements.resultsStatus.textContent = 'Complete';
    elements.btnDownload.style.display = 'inline-flex';
    elements.btnNewResearch.style.display = 'inline-flex';
  }

  function downloadResults() {
    if (results.length === 0) return;

    // Headers: original headers + research field names
    const headers = [...csvHeaders, ...fields.map(f => f.name)];

    // Rows: original data + research results
    const rows = results.map((r) => [
      ...r.originalData,
      ...fields.map(f => r.research[f.name] || ''),
    ]);

    const csvContent = [headers, ...rows]
      .map((row) => row.map((cell) => `"${String(cell).replace(/"/g, '""')}"`).join(','))
      .join('\n');

    const blob = new Blob([csvContent], { type: 'text/csv' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `research_results_${new Date().toISOString().slice(0, 10)}.csv`;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
  }
