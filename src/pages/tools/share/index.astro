<script is:inline>
  // Session configuration
  const SESSION_KEY = 'fileshare_session';
  const SESSION_DURATION_MS = 60 * 60 * 1000; // 1 hour
  const ACCESS_PASSWORD = 'Florida';
  const MAX_FILE_SIZE_ADMIN = 100 * 1024 * 1024; // 100MB
  const MAX_FILE_SIZE_GUEST = 10 * 1024 * 1024;  // 10MB

  // Current mode: 'admin' or 'guest'
  let currentMode = null;

  // Generate session token
  async function generateSessionToken(mode) {
    const timestamp = Date.now();
    const randomBytes = new Uint8Array(16);
    crypto.getRandomValues(randomBytes);
    const random = Array.from(randomBytes).map(b => b.toString(16).padStart(2, '0')).join('');
    return { mode, timestamp, random };
  }

  // Verify session token
  function getValidSession() {
    try {
      const sessionData = localStorage.getItem(SESSION_KEY);
      if (!sessionData) return null;

      const { mode, timestamp } = JSON.parse(sessionData);
      if (!mode || !timestamp) return null;

      const now = Date.now();
      if (now - timestamp > SESSION_DURATION_MS) {
        localStorage.removeItem(SESSION_KEY);
        return null;
      }

      return { mode };
    } catch {
      localStorage.removeItem(SESSION_KEY);
      return null;
    }
  }

  // Save session
  async function saveSession(mode) {
    const session = await generateSessionToken(mode);
    localStorage.setItem(SESSION_KEY, JSON.stringify(session));
  }

  // Clear session (logout)
  function clearSession() {
    localStorage.removeItem(SESSION_KEY);
    currentMode = null;
  }

  // Get current max file size
  function getMaxFileSize() {
    return currentMode === 'guest' ? MAX_FILE_SIZE_GUEST : MAX_FILE_SIZE_ADMIN;
  }

  function formatFileSize(bytes) {
    if (bytes < 1024) return bytes + ' B';
    if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
    return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
  }

  function formatDate(dateStr) {
    if (!dateStr) return 'Never';
    const date = new Date(dateStr);
    return date.toLocaleDateString('en-US', {
      month: 'short',
      day: 'numeric',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
  }

  function isExpired(expiresAt) {
    if (!expiresAt) return false;
    return new Date(expiresAt) < new Date();
  }

  // State
  let selectedFile = null;
  let files = [];

  // DOM elements
