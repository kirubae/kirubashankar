    const list = document.getElementById('logs-list');
    const tbody = document.getElementById('logs-tbody');

    modal.style.display = 'flex';
    loading.style.display = 'block';
    empty.style.display = 'none';
    list.style.display = 'none';

    try {
      const response = await fetch(`/api/share/collections/${id}/logs`);
      const data = await response.json();
      const logs = data.logs || [];

      loading.style.display = 'none';

      if (logs.length === 0) {
        empty.style.display = 'block';
        return;
      }

      list.style.display = 'block';
      tbody.innerHTML = logs.map(log => `
        <tr>
          <td>${log.email}</td>
          <td>${formatDate(log.accessed_at)}</td>
          <td>${log.location || '-'}</td>
          <td style="font-family: monospace; font-size: 12px;">${log.ip_address || '-'}</td>
          <td>
            <span class="status-badge ${log.success ? 'success' : 'failed'}">
              ${log.success ? (log.action === 'download_file' ? 'Download' : 'View') : log.failure_reason || 'Failed'}
            </span>
          </td>
        </tr>
      `).join('');

    } catch (error) {
      loading.textContent = 'Failed to load logs';
    }
  };

  // =====================
  // EDIT COLLECTION
  // =====================
  window.editCollection = async function(id) {
    const collection = collections.find(c => c.id === id);
    if (!collection) return;

    document.getElementById('edit-collection-id').value = id;
    document.getElementById('edit-collection-title').value = collection.title;
    document.getElementById('edit-collection-subtitle').value = collection.subtitle || '';

    if (collection.expires_at) {
      document.querySelector('input[name="edit_collection_expiry_type"][value="date"]').checked = true;
      document.getElementById('edit-collection-expiry-date').value = collection.expires_at.slice(0, 16);
    } else {
      document.querySelector('input[name="edit_collection_expiry_type"][value="never"]').checked = true;
      document.getElementById('edit-collection-expiry-date').value = '';
    }

    document.getElementById('edit-collection-password').value = '';
    document.getElementById('edit-collection-remove-password').checked = false;

    const emails = collection.allowed_emails ? JSON.parse(collection.allowed_emails) : [];
    document.getElementById('edit-collection-allowed-emails').value = emails.join('\n');

    document.getElementById('edit-collection-modal').style.display = 'flex';
  };

  document.querySelectorAll('input[name="edit_collection_expiry_type"]').forEach(radio => {
    radio.addEventListener('change', () => {
      document.getElementById('edit-collection-expiry-date').style.display = radio.value === 'date' ? 'block' : 'none';
    });
  });

  document.getElementById('close-edit-collection').addEventListener('click', () => {
    document.getElementById('edit-collection-modal').style.display = 'none';
  });

  document.getElementById('btn-cancel-edit-collection').addEventListener('click', () => {
    document.getElementById('edit-collection-modal').style.display = 'none';
  });

  document.getElementById('edit-collection-form').addEventListener('submit', async (e) => {
    e.preventDefault();

    const id = document.getElementById('edit-collection-id').value;
    const title = document.getElementById('edit-collection-title').value.trim();
    const subtitle = document.getElementById('edit-collection-subtitle').value.trim();
    const expiryType = document.querySelector('input[name="edit_collection_expiry_type"]:checked').value;
    const expiryDate = expiryType === 'date' ? document.getElementById('edit-collection-expiry-date').value : null;
    const password = document.getElementById('edit-collection-password').value;
    const removePassword = document.getElementById('edit-collection-remove-password').checked;
    const allowedEmailsText = document.getElementById('edit-collection-allowed-emails').value;
    const allowedEmails = allowedEmailsText.split('\n').map(e => e.trim()).filter(e => e.length > 0);

    const body = {
      title,
      subtitle: subtitle || null,
      expires_at: expiryDate,
      allowed_emails: allowedEmails
    };

    if (removePassword) {
      body.remove_password = true;
    } else if (password) {
      body.password = password;
    }

    try {
      const response = await fetch(`/api/share/collections/${id}`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body)
      });

      if (!response.ok) throw new Error('Failed to update collection');

      document.getElementById('edit-collection-modal').style.display = 'none';
      loadCollections();

    } catch (error) {
      alert(error.message);
    }
  });

  // =====================
  // DELETE COLLECTION
  // =====================
  window.deleteCollection = function(id, title) {
    document.getElementById('delete-collection-id').value = id;
    document.getElementById('delete-collection-name').textContent = title;
    document.getElementById('delete-collection-modal').style.display = 'flex';
  };

  document.getElementById('close-delete-collection').addEventListener('click', () => {
    document.getElementById('delete-collection-modal').style.display = 'none';
  });

  document.getElementById('btn-cancel-delete-collection').addEventListener('click', () => {
    document.getElementById('delete-collection-modal').style.display = 'none';
  });

  document.getElementById('btn-confirm-delete-collection').addEventListener('click', async () => {
    const id = document.getElementById('delete-collection-id').value;

    try {
      const response = await fetch(`/api/share/collections/${id}`, { method: 'DELETE' });
      if (!response.ok) throw new Error('Failed to delete collection');

      document.getElementById('delete-collection-modal').style.display = 'none';
      loadCollections();

    } catch (error) {
      alert(error.message);
    }
  });

  // =====================
  // ADD SUBFOLDER
  // =====================
  document.getElementById('btn-add-subfolder').addEventListener('click', () => {
    document.getElementById('subfolder-parent-id').value = currentCollectionId;
    document.getElementById('subfolder-title').value = '';
    document.getElementById('subfolder-subtitle').value = '';
    document.getElementById('add-subfolder-modal').style.display = 'flex';
  });

  document.getElementById('close-add-subfolder').addEventListener('click', () => {
    document.getElementById('add-subfolder-modal').style.display = 'none';
  });

  document.getElementById('btn-cancel-add-subfolder').addEventListener('click', () => {
    document.getElementById('add-subfolder-modal').style.display = 'none';
  });

  document.getElementById('add-subfolder-form').addEventListener('submit', async (e) => {
    e.preventDefault();

    const parentId = document.getElementById('subfolder-parent-id').value;
    const title = document.getElementById('subfolder-title').value.trim();
    const subtitle = document.getElementById('subfolder-subtitle').value.trim();

    try {
      const response = await fetch(`/api/share/collections/${parentId}/add-subcollection`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ title, subtitle: subtitle || null })
      });

      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.error || 'Failed to create subfolder');
      }

      document.getElementById('add-subfolder-modal').style.display = 'none';
      loadCollectionContents(parentId);

    } catch (error) {
      alert(error.message);
    }
  });

  // =====================
  // ADD FILE TO COLLECTION
  // =====================
  const collectionUploadArea = document.getElementById('collection-upload-area');
  const collectionFileInput = document.getElementById('collection-file-input');
  const collectionFileSelected = document.getElementById('collection-file-selected');
  const addFileActions = document.getElementById('add-file-actions');

  document.getElementById('btn-add-file-to-collection').addEventListener('click', () => {
    document.getElementById('add-file-collection-id').value = currentCollectionId;
    collectionFileToUpload = null;
    collectionUploadArea.style.display = 'block';
    collectionFileSelected.style.display = 'none';
    addFileActions.style.display = 'none';
    document.getElementById('collection-upload-progress').style.display = 'none';
    document.getElementById('add-file-modal').style.display = 'flex';
  });

  document.getElementById('collection-upload-btn').addEventListener('click', (e) => {
    e.stopPropagation();
    collectionFileInput.click();
  });

  collectionUploadArea.addEventListener('click', () => collectionFileInput.click());

  collectionFileInput.addEventListener('change', () => {
    if (collectionFileInput.files[0]) {
      const file = collectionFileInput.files[0];
      const ext = file.name.split('.').pop()?.toLowerCase();
      if (!ext || !ALLOWED_EXTENSIONS.includes(ext)) {
        alert('Unsupported file type');
        return;
      }
      if (file.size > MAX_FILE_SIZE_ADMIN) {
        alert('File too large (max 100MB)');
        return;
      }
      collectionFileToUpload = file;
      document.getElementById('collection-selected-filename').textContent = file.name;
      document.getElementById('collection-selected-size').textContent = formatFileSize(file.size);
      collectionUploadArea.style.display = 'none';
      collectionFileSelected.style.display = 'flex';
      addFileActions.style.display = 'flex';
    }
  });

  document.getElementById('btn-remove-collection-file').addEventListener('click', () => {
    collectionFileToUpload = null;
    collectionFileInput.value = '';
    collectionUploadArea.style.display = 'block';
    collectionFileSelected.style.display = 'none';
    addFileActions.style.display = 'none';
  });

  document.getElementById('close-add-file').addEventListener('click', () => {
    document.getElementById('add-file-modal').style.display = 'none';
  });

  document.getElementById('btn-cancel-add-file').addEventListener('click', () => {
    document.getElementById('add-file-modal').style.display = 'none';
  });

  document.getElementById('add-file-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    if (!collectionFileToUpload) return;

    const collectionId = document.getElementById('add-file-collection-id').value;

    collectionFileSelected.style.display = 'none';
    addFileActions.style.display = 'none';
    document.getElementById('collection-upload-progress').style.display = 'block';
    document.getElementById('collection-progress-fill').style.width = '50%';

    const formData = new FormData();
    formData.append('file', collectionFileToUpload);

    try {
      const response = await fetch(`/api/share/collections/${collectionId}/add-file`, {
        method: 'POST',
        body: formData
      });

      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.error || 'Failed to upload file');
      }

      document.getElementById('collection-progress-fill').style.width = '100%';

      setTimeout(() => {
        document.getElementById('add-file-modal').style.display = 'none';
        loadCollectionContents(collectionId);
      }, 500);

    } catch (error) {
      alert(error.message);
      collectionUploadArea.style.display = 'block';
      document.getElementById('collection-upload-progress').style.display = 'none';
    }
  });

  // Make showCollectionsList available globally
  window.showCollectionsList = showCollectionsList;
</script>
