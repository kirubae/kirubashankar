      if (dragHandle.includes('s')) newHeight = Math.max(50, startCrop.height + dy);
      if (dragHandle.includes('n')) {
        const dh = Math.min(dy, startCrop.height - 50);
        newHeight = startCrop.height - dh;
        newY = startCrop.y + dh;
