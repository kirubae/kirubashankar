  function initializeCrop() {
    const img = elements.previewImage;
    const imgRect = img.getBoundingClientRect();
    let cropWidth, cropHeight;
    if (cropAspectRatio) {
      if (imgRect.width / imgRect.height > cropAspectRatio) {
