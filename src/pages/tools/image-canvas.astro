      if (cropAspectRatio) {
        if (dragHandle === 'e' || dragHandle === 'w') newHeight = newWidth / cropAspectRatio;
        else if (dragHandle === 'n' || dragHandle === 's') newWidth = newHeight * cropAspectRatio;
        else newHeight = newWidth / cropAspectRatio;
