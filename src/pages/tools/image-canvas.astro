      btn.classList.add('active');
      designState.canvasWidth = parseInt(btn.dataset.width);
      designState.canvasHeight = parseInt(btn.dataset.height);
      renderDesignCanvas();
    });
  });

  // Custom Canvas Size
  designElements.canvasWidth.addEventListener('change', () => {
    designState.canvasWidth = parseInt(designElements.canvasWidth.value) || 1080;
    document.querySelectorAll('.canvas-size-btn').forEach(b => b.classList.remove('active'));
    renderDesignCanvas();
  });
  designElements.canvasHeight.addEventListener('change', () => {
    designState.canvasHeight = parseInt(designElements.canvasHeight.value) || 1080;
    document.querySelectorAll('.canvas-size-btn').forEach(b => b.classList.remove('active'));
    renderDesignCanvas();
  });

  // Background Color
  designElements.bgColor.addEventListener('input', () => {
    designState.backgroundColor = designElements.bgColor.value;
    designElements.bgColorLabel.textContent = designElements.bgColor.value;
    designElements.canvas.style.backgroundColor = designState.backgroundColor;
  });

  // Add Text
  designElements.addTextBtn.addEventListener('click', () => {
    const newText = {
      id: designState.nextId++,
      type: 'text',
      content: 'Your text here',
      x: designState.canvasWidth / 2 - 100,
      y: designState.canvasHeight / 2 - 30,
      fontSize: 48,
      fontFamily: 'Inter',
      color: '#000000',
    };
    designState.elements.push(newText);
    selectElement(newText.id);
    renderDesignCanvas();
  });

  // Add Image
  designElements.addImageBtn.addEventListener('click', () => {
    designElements.imageInput.click();
  });

  designElements.imageInput.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = (ev) => {
      const img = new Image();
      img.onload = () => {
        // Scale image to fit canvas
        let width = img.naturalWidth;
        let height = img.naturalHeight;
        const maxSize = Math.min(designState.canvasWidth, designState.canvasHeight) * 0.6;
        if (width > maxSize || height > maxSize) {
          const scale = maxSize / Math.max(width, height);
          width *= scale;
          height *= scale;
        }

        const newImage = {
          id: designState.nextId++,
          type: 'image',
          src: ev.target.result,
          x: (designState.canvasWidth - width) / 2,
          y: (designState.canvasHeight - height) / 2,
          width: width,
          height: height,
        };
        designState.elements.push(newImage);
        selectElement(newImage.id);
        renderDesignCanvas();
      };
      img.src = ev.target.result;
    };
    reader.readAsDataURL(file);
    e.target.value = '';
  });

  // Text Properties
  designElements.textFont.addEventListener('change', () => {
    const el = designState.elements.find(e => e.id === designState.selectedId);
    if (el && el.type === 'text') {
      el.fontFamily = designElements.textFont.value;
      renderElements();
    }
  });

  designElements.textSize.addEventListener('input', () => {
    const el = designState.elements.find(e => e.id === designState.selectedId);
    if (el && el.type === 'text') {
      el.fontSize = parseInt(designElements.textSize.value) || 48;
      renderElements();
    }
  });

  designElements.textColor.addEventListener('input', () => {
    const el = designState.elements.find(e => e.id === designState.selectedId);
    if (el && el.type === 'text') {
      el.color = designElements.textColor.value;
      renderElements();
    }
  });

  // Delete Element
  designElements.deleteElementBtn.addEventListener('click', () => {
    if (designState.selectedId) {
      designState.elements = designState.elements.filter(e => e.id !== designState.selectedId);
      designState.selectedId = null;
      designElements.elementProperties.style.display = 'none';
      renderDesignCanvas();
    }
  });

  // Double-click to edit text
  designElements.canvas.addEventListener('dblclick', (e) => {
    const target = e.target.closest('.design-text');
    if (target) {
      const id = parseInt(target.dataset.id);
      const el = designState.elements.find(e => e.id === id);
      if (el) {
        const newText = prompt('Edit text:', el.content);
        if (newText !== null) {
          el.content = newText;
          renderDesignCanvas();
        }
      }
    }
  });

  // Click canvas to deselect
  designElements.canvas.addEventListener('click', (e) => {
    if (e.target === designElements.canvas) {
      designState.selectedId = null;
      designElements.elementProperties.style.display = 'none';
      renderElements();
      renderLayers();
    }
  });

  // Clear All
  designElements.resetBtn.addEventListener('click', () => {
    if (confirm('Clear all elements?')) {
      designState.elements = [];
      designState.selectedId = null;
      designState.nextId = 1;
      designElements.elementProperties.style.display = 'none';
      renderDesignCanvas();
    }
  });

  // Download Design
  designElements.downloadBtn.addEventListener('click', async () => {
    elements.loading.classList.add('active');
    try {
      const canvas = document.createElement('canvas');
      canvas.width = designState.canvasWidth;
      canvas.height = designState.canvasHeight;
      const ctx = canvas.getContext('2d');

      // Background
      ctx.fillStyle = designState.backgroundColor;
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      // Render elements in order
      for (const el of designState.elements) {
        if (el.type === 'text') {
          ctx.font = `${el.fontSize}px ${el.fontFamily}`;
          ctx.fillStyle = el.color;
          ctx.fillText(el.content, el.x, el.y + el.fontSize);
        } else if (el.type === 'image') {
          const img = new Image();
          img.src = el.src;
          await new Promise(resolve => {
            if (img.complete) resolve();
            else img.onload = resolve;
          });
          ctx.drawImage(img, el.x, el.y, el.width, el.height);
        }
      }

      const blob = await new Promise(resolve => canvas.toBlob(resolve, 'image/png'));
      const filename = `design_${designState.canvasWidth}x${designState.canvasHeight}.png`;
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = filename;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    } catch (error) {
      console.error('Error exporting design:', error);
      alert('Error exporting design. Please try again.');
    } finally {
      elements.loading.classList.remove('active');
    }
  });

  // Delete key to remove selected element
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Delete' && designState.selectedId && currentMode === 'design') {
      designState.elements = designState.elements.filter(el => el.id !== designState.selectedId);
      designState.selectedId = null;
      designElements.elementProperties.style.display = 'none';
      renderDesignCanvas();
    }
  });
</script>
